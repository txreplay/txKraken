{% set curr_route = app.request.attributes.get('_route') %}

<!DOCTYPE html>
<html lang="fr-FR">
<head>
    <meta charset="{% block metaCharset %}utf-8{% endblock %}">
    <meta name="viewport" content="{% block metaViewport %}width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no{% endblock %}">

    <title>{% block title %}{% endblock %} | txCrypto</title>
    <meta name="description" content="{% block metaDescription %}{% endblock %}" />
    <meta name="keywords" content="{% block metaKeywords %}{% endblock %}">
    <meta name="geo.placename" content="{% block metaGeoPlacename %}Paris, ÃŽle-de-France, France{% endblock %}">
    <meta name="robots" content="{% block metaRobots %}index,follow{% endblock %}">

    <meta name="author" content="{% block metaAuthor %}Valentin Commenge{% endblock %}" />
    <meta name="copyright" content="{% block metaCopyright %}{% endblock %}" />

    {#{% block metaFacebook %}#}
        {#{% include 'partials/meta/facebook.html.twig' %}#}
    {#{% endblock %}#}

    {% block favicon %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% endblock %}

    {% block fonts %}
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons">
    {% endblock %}

    {% block stylesheets %}
        {#<link rel="stylesheet" href="{{ asset('css/reset.css') }}" />#}
        <link rel="stylesheet" href="{{ asset('bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bower_components/font-awesome/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
    {% endblock %}
</head>

<body class="{% block bodyClass %}{% endblock %}" id="{% block bodyId %}{% endblock %}">
{% block body %}
    {% include 'front/partials/header.html.twig' %}

    {% block content %}{% endblock %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bower_components/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('bower_components/popper.js/dist/umd/popper.min.js') }}"></script>
    <script src="{{ asset('bower_components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bower_components/izitoast/dist/js/iziToast.min.js') }}" type="text/javascript"></script>
    {#<script src="https://coinhive.com/lib/coinhive.min.js"></script>#}
{% endblock %}
</body>
</html>